@-webkit-keyframes anifocus
  0%
    -webkit-filter: blur(0px)

  25%
    -webkit-filter: blur(3px)

  50%
    -webkit-filter: blur(0px)
  75%
    -webkit-filter: blur(3px)
  100%
    -webkit-filter: blur(0px)

html, body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

.main
  width: 100%
  height: 100%
  background-color: #4a8aae


.container
  background-image: url('<%= asset_path("blueprint.png")%>')
  background-repeat: no-repeat
  background-position: 50% 50%
  width: 100%
  height: 100%
  
  .quiz-title
    width: 640px
    height: 185px
    display: block
    position: absolute
    top: 50%
    left: 50%
    margin-left: -320px
    margin-top: -200px
    -webkit-animation: anifocus 3s
  .quiz-subtitle
    margin: 0
    padding: 0
    font-family: 'geo'
    font-size: 22px
    color: #fff
    text-align: center
    position: absolute
    top: 50%
    font-style: italic
