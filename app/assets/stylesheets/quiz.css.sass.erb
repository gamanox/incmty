.container
  background-image: url('<%= asset_path("blueprint.png")%>')
  background-repeat: no-repeat
  background-position: 50% 50%
  width: 100%
  height: 100%
  position: relative
  .case-next
    width: 107px
    height: 108px
    position: absolute
    top: 50% 
    left: 50%
    margin-top: 120px
    margin-left: -54px
    cursor: pointer
    -webkit-transition: all 0.2s ease-in-out
    -moz-transition: all 0.2s ease-in-out
    -ms-transition: all 0.2s ease-in-out
    -o-transition: all 0.2s ease-in-out
    transition: all 0.2s ease-in-out
    -webkit-filter: drop-shadow(0px 6px 3px rgba(0,0,0,0.25))
    &:hover
      
      margin-top: 122px
      -webkit-filter: drop-shadow(0px 1px 1px rgba(0,0,0,0.25))

  .case-title
    // position: absolute
    width: 723px
    margin-left: auto
    margin-right: auto
    // height: 100px
    height: 50px
    padding-top: 50px

    p.case-number
      float: left
      font-family: 'chunk'
      font-size: 39px
      color: #fff
    .left-brace
      float: left
      margin-left: 15px
      margin-right: 15px
    .right-brace
      float: left
      margin-left: 15px
      margin-right: 15px
    p.case-description
      float: left
      font-family: 'geo'
      font-style: italic
      // font-weight: 700
      width: 430px
      height: 120px
      font-size: 22px
      color: #fff
      text-align: center
  
  .quiz-title
    width: 746px
    height: 201px
    display: block
    position: absolute
    top: 50%
    left: 50%
    margin-left: -373px
    margin-top: -200px
    -webkit-animation: anifocus 3s
  .quiz-subtitle
    margin: 0
    padding: 0
    font-family: 'geo'
    font-size: 22px
    color: #fff
    text-align: center
    position: absolute
    width: 100%
    top: 55%
    font-style: italic
  .quiz-start
    cursor: pointer
    width: 125px
    height: 124px
    background-image: url("<%= asset_path("quiz-start.png")%>")
    position: absolute
    top: 50%
    left: 50%
    margin-left: -60px
    margin-top: 100px
    -webkit-transition: all 0.2s ease-in-out
    -moz-transition: all 0.2s ease-in-out
    -ms-transition: all 0.2s ease-in-out
    -o-transition: all 0.2s ease-in-out
    transition: all 0.2s ease-in-out
    -webkit-filter: drop-shadow(0px 6px 3px rgba(0,0,0,0.25))
    
    &:hover
      margin-top: 102px

      -webkit-filter: drop-shadow(0px 1px 1px rgba(0,0,0,0.25))  

