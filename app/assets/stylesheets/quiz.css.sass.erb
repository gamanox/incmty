@-webkit-keyframes anifocus
  0%
    -webkit-filter: blur(0px)

  25%
    -webkit-filter: blur(3px)

  50%
    -webkit-filter: blur(0px)
  75%
    -webkit-filter: blur(3px)
  100%
    -webkit-filter: blur(0px)

html, body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

a
  text-decoration: none
  outline: 0
ul
  margin: 0
  padding: 0
  list-style: none

  li
    margin: 0
    padding: 0


