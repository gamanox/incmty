html
  width: 100%
  height: 100%
body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  background: #367aa2
  background: #4397b7

p
  margin: 0
  padding: 0
a
  text-decoration: none
  outline: 0

#svg
  width: 100%
  height: 100%


.logo
  width: 182px
  height: 77px
  position: absolute
  left: 0
  top: 50px

p.centertitle
  position: relative
  font-family: 'big'
  font-size: 55px
  position: absolute
  top: 50%
  left: 50%
  margin-left: -315px
  margin-top: -112px
  color: #add85e
  line-height: 50px
  span
    color: #fff

  #sign_in
    display: block
    float: right
    margin-right: 50px

#nav-right
  position: fixed
  right: 30px
  top: 30px

  p.righttitle
    position: relative
    font-family: 'big'
    font-size: 20px
    text-align: right
    color: #add85e
    line-height: 20px
    margin: 0
    span
      color: #fff

#main
  width: 100%
  height: 100%
  background-image: url('<%= asset_path("grid.png")%>')
  background-repeat: no-repeat
  background-position: 50% 50%

#nav-category
  position: fixed
  left: 0
  top: 150px
  z-index: 10
  margin: 0
  padding: 0
  li
    margin: 0
    padding: 0
    list-style: none
    cursor: pointer
    a
      position: relative
      padding-top: 5px
      padding-bottom: 3px
      display: block
      padding-right: 30px
      padding-left: 30px
      height: 20px
      color: #fff
      font-family: 'big'
      font-size: 20px
      letter-spacing: 1px
      -webkit-transition: all 0.3s ease-in-out
      -moz-transition: all 0.3s ease-in-out
      -ms-transition: all 0.3s ease-in-out
      -o-transition: all 0.3s ease-in-out
      transition: all 0.3s ease-in-out
      -webkit-transform: translate(-100px, 0px)
      -moz-transform: translate(-100px, 0px)
      -ms-transform: translate(-100px, 0px)
      -o-transform: translate(-100px, 0px)
      transform: translate(-100px, 0px)
      &:hover

        -webkit-transform: translate(0px, 0px)
        -moz-transform: translate(0px, 0px)
        -ms-transform: translate(0px, 0px)
        -o-transform: translate(0px, 0px)
        transform: translate(0px, 0px)

      span
        position: absolute
        top: 10px
        right: 5px
        display: block
        // height: 10px
        // height: 10px
        // width: 10px
        border-left: 5px #fff solid
        border-top: 5px rgba(255,255,255,0) solid
        border-right: 5px rgba(255,255,255,0) solid
        border-bottom: 5px rgba(255,255,255,0) solid



