  @media screen and (max-width: $break-small)
    width: 100%
    z-index: 10
    // background-image: url('<%= asset_path("logobg.png")%>')
    background-color: #FFF
    left: auto
    position: relative

    top: auto
    height: 60px
    img
      display: none
    #logoincmob
