    top: 0
    left: 0


#canvas
  position: absolute
  left: 50%
  top: 50%
  margin-left: -200px
  margin-top: -200px

.tangram-logo
  width: 100%
  height: 77px
  position: absolute
  left: 0
  top: 0px
  z-index: 1000
  // background-image: url('<%= asset_path("logobg.png")%>')
  background-color: #fff
  img
    display: none
  #logoincmob
    display: block
    height: 60px
    margin-left: auto
